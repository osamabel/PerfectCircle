datasource db {
  provider = "postgresql" // or mysql, depending on your SQL flavor
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  image     String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // For multilingual content
  language  String   @default("en")
  
  // You might want to associate posts with translations
  originalPostId String?
  originalPost   Post?    @relation("Translations", fields: [originalPostId], references: [id])
  translations   Post[]   @relation("Translations")
}
